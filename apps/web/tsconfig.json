{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/components/*": [
        "src/components/*"
      ],
      "@/lib/*": [
        "./src/lib/*"
      ]
    },
    "target": "ES2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "/packages/ui/src/**/*.tsx",
    "/packages/ui/src/**/*.ts",
    "/packages/ui/utils/**/*.ts",
    "/packages/bible/src/**/*.tsx",
    "/packages/bible/src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
